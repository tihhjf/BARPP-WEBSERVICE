<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Barpp-WebService"
		transaction-type="RESOURCE_LOCAL">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.qwerty.entidade.Bar</class>
		<class>br.com.qwerty.entidade.Checkin</class>
		<class>br.com.qwerty.entidade.Colaborador</class>
		<class>br.com.qwerty.entidade.Cliente</class>
		<class>br.com.qwerty.entidade.Endereco</class>
		<class>br.com.qwerty.entidade.Imagem</class>
		<class>br.com.qwerty.entidade.Pedido</class>
		<class>br.com.qwerty.entidade.PedidoProduto</class>
		<class>br.com.qwerty.entidade.Produto</class>
		<class>br.com.qwerty.entidade.Promocao</class>
		<class>br.com.qwerty.entidade.PromocaoProduto</class>
		<class>br.com.qwerty.entidade.Checkout</class>
		<class>br.com.qwerty.entidade.Usuario</class>
		<class>br.com.qwerty.entidade.Avaliacao</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>

			
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/barpp" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>
	</persistence-unit>
</persistence>
